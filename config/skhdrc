# Focus windows.
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Swap windows.
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# Balance size of windows.
shift + alt - 0 : yabai -m space --balance

# Resize windows.
alt + ctrl - k : yabai -m window --resize top:0:-60
alt + ctrl + shift - j : yabai -m window --resize top:0:60
alt + ctrl - j : yabai -m window --resize bottom:0:60
alt + ctrl + shift - k : yabai -m window --resize bottom:0:-60
alt + ctrl - l : yabai -m window --resize right:60:0
alt + ctrl + shift - h : yabai -m window --resize right:-60:0
alt + ctrl - h : yabai -m window --resize left:-60:0
alt + ctrl + shift - l : yabai -m window --resize left:60:0

# Zoom.
alt - m : yabai -m window --toggle zoom-fullscreen

# Rotate.
alt - r : yabai -m window --toggle split

# Cycle.
alt - c : yabai -m window --focus next || yabai -m window --focus first
