# Starting programs
super + Return
  eval $TERMINAL
super + r
  eval $BROWSER
super + space
  $scr/launcher.sh
super + grave
  $scr/quake.py
super + ctrl + c
  networkmanager_dmenu

# Volume and brightness
shift + XF86Audio{Lower,Raise}Volume
  $scr/vol_control.sh {down,up} 1
XF86Audio{Lower,Raise}Volume
  $scr/vol_control.sh {down,up} 3
XF86AudioMute
  $scr/vol_control.sh toggle
XF86MonBrightnessUp
  xbacklight -inc 5
XF86MonBrightnessDown
  xbacklight -dec 5

# Misc utilities
super + g
  $scr/toggle_gap.sh
super + p
  $scr/switch_window.sh
super + a
  pgrep panel.py && killall panel.py || $PANEL_PATH/panel.py &
super + ctrl + alt + z
  $scr/lock.sh
super + Print
  import $SCREENSHOT_LOCATION

# Reload SXHKD configuration
super + Escape
	pkill -USR1 -x sxhkd

# Close windows
super + {_,shift + }w
	bspc node -{c,k}

# Toggle monacle
super + m
	bspc desktop --layout next

# BSPWM modifiers
# Change window to floating/titled/fullscreen
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# Focus/move in a direction
super + {_,shift + }{h,j,k,l}
	bspc node --{focus,swap} {west,south,north,east}
# Cycle between nodes in a window
super + {_,shift + }c
	bspc node --focus {next,prev}.local
# Go to last desktop
super + Tab
	bspc desktop --focus last
# Focus/move to desktop
super + {_,shift + }{1-9,0}
	bspc {desktop --focus,node --to-desktop} '^{1-9,10}'
# Focus/move to dump desktop
super + {_,shift + }d
	bspc {desktop --focus,node --to-desktop} 'dmp'
# Focus the next/previous occupied desktop
super + {q,e}
	bspc desktop --focus {prev,next}.occupied.local
# Focus the next/previous desktop
super + shift + {q,e}
	bspc desktop --focus {prev,next}.local

# BSPWM preselection
# Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node --presel-dir {west,south,north,east}
# Preselect ratio
super + ctrl + {1-9}
	bspc node --presel-ratio 0.{1-9}
# Cancel preselection
super + ctrl + space
	bspc node --presel-dir cancel
# Cancel preselection for desktop
super + ctrl + shift + space
	bspc query --nodes --dump-state | xargs -I id -n 1 bspc node id -p cancel

# BSPWM resizing windows
# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
  bspc node {\
    @west -r -$WINDOW_RESIZE_INCREMENTS,\
    @south -r +$WINDOW_RESIZE_INCREMENTS,\
    @north -r -$WINDOW_RESIZE_INCREMENTS,\
    @east -r +$WINDOW_RESIZE_INCREMENTS}
# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
  bspc node {\
    @east -r -$WINDOW_RESIZE_INCREMENTS,\
    @north -r +$WINDOW_RESIZE_INCREMENTS,\
    @south -r -$WINDOW_RESIZE_INCREMENTS,\
    @west -r +$WINDOW_RESIZE_INCREMENTS}
